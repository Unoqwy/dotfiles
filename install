#!/bin/sh

function install {
    ln -sn "$(pwd)/$1" "$HOME/${2:-$1}" 2>/dev/null
}

function install_all {
    ln -sn "$(pwd)/$1"/* "$HOME/${2:-$1}/" 2>/dev/null
}

install .xmonad
install .config/alacritty
install .config/kitty
install .config/wezterm
install .config/greenclip.toml
install .zshrc
install .zshenv
install .Xresources
install .Xmodmap
install .ideavimrc
install .vimrc
install .xinitrc
install .gitconfig

install_all .cargo
install_all .config
install_all .local/bin

echo "Done"

# TODO: qdf.toml once QDF becomes usable
