[global]
    verbosity = crit

    follow = keyboard
    idle_threshold = 0

    geometry = "300x0-2-2"
    transparency = 10

    padding = 8
    horizontal_padding = 8

    frame_width = 2
    corner_radius = 2

    separator_height = 1
    separator_color = auto

    font = Jetbrains Mono 9
    line_height = 0
    alignment = left
    vertical_alignment = center

    # %a - appname
    # %s - summary
    # %b - body
    # %i - iconname (including its path)
    # %I - iconname (without its path)
    # %p - progress value if set ([  0%] to [100%]) or nothing
    # %n - progress value if set without any extra characters
    # %% - Literal %
    format = "<b>%s</b> [%a]\n%b"
    markup = full

    progress_bar = true
    progress_bar_height = 10
    progress_bar_frame_width = 1
    progress_bar_min_width = 150
    progress_bar_max_width = 300

    word_wrap = yes
    ellipsize = middle

    stack_duplicates = true
    hide_duplicate_count = false
    show_indicators = true

    icon_position = left
    min_icon_size = 48
    max_icon_size = 48
    text_icon_padding = 6

    sticky_history = yes
    history_length = 20
    ignore_dbusclose = false
    always_run_script = true
    startup_notification = false

    mouse_left_click = close_current
    mouse_middle_click = close_all
    mouse_right_click = do_action, close_current


[urgency_low]
    background = "#242530"
    foreground = "#e3e1e4"
    frame_color = "#4c516d"
    timeout = 3

[urgency_normal]
    background = "#242530"
    foreground = "#e3e1e4"
    frame_color = "#4c516d"
    timeout = 5

[urgency_critical]
    background = "#242530"
    foreground = "#e3e1e4"
    frame_color = "#f85e84"
    timeout = 0


[notify-send]
    appname = "notify-send"
    format = "<b>%s</b>\n%b"

[spotify]
    appname = "Spotify"
    icon_position = right
    format = "<b>Now playing</b>\n%b"
    frame_color = "#1DB954"
    timeout = 2

